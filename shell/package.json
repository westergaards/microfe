{
  "name": "microfe-shell",
  "version": "1.0.0",
  "scripts": {
    "build": "rm -rf ./dist/** && npm run build:css && webpack --mode production --env=prod && cp -R ./dist/** ../deploy-shell/static",
    "build:dev": "npm run build:css && webpack --mode development --env=dev",
    "start": "npm run watch:css && webpack-dev-server --open --mode development --env=dev",
    "start:live": "npm run watch:css &&webpack-dev-server --open --mode development --liveReload",
    "build:css": "postcss src/assets/tailwind.css -o src/assets/main.css",
    "watch:css": "postcss src/assets/tailwind.css -o src/assets/main.css"
  },
  "license": "MIT",
  "author": {
    "name": "steve westergaard"
  },
  "devDependencies": {
    "@babel/core": "7.9.6",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "7.9.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/react": "^16.9.43",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "autoprefixer": "^9.8.4",
    "babel-loader": "8.1.0",
    "commitizen": "^4.1.2",
    "css-loader": "^3.5.3",
    "cz-conventional-changelog": "^3.2.0",
    "danger": "^10.2.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "html-webpack-plugin": "git://github.com/ScriptedAlchemy/html-webpack-plugin#master",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5",
    "prettier-tslint": "^0.4.2",
    "style-loader": "1.2.1",
    "typescript": "^3.9.6",
    "webpack": "5.0.0-beta.20",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.11.0"
  },
  "dependencies": {
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-router": "6.0.0-alpha.5",
    "react-router-dom": "6.0.0-alpha.5",
    "tailwindcss": "^1.4.6"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "yarn lint-staged && yarn danger"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add -A"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./react/node_modules/cz-conventional-changelog/"
    }
  }
}
