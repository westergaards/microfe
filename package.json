{
  "private": true,
  "workspaces": [
    "shell",
    "remote"
  ],
  "scripts": {
    "build": "cd remote && yarn build && cd .. && cd shell && yarn build",
    "deploy": "cd deploy-remote && serverless deploy && cd .. && cd deploy-shell && serverless deploy",
    "lint:staged": "lint-staged",
    "danger": "./node_modules/.bin/danger local"
  },
  "devDependencies": {
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "danger": "^10.2.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "yarn lint:staged && yarn danger"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "cd \"./shell\" && yarn lint",
      "git add -A"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
